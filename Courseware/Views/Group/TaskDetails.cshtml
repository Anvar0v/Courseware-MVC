@model Courseware.Models.Task;

<div style="display:flex;flex-direction:column;align-items:center;">
    <div class="card card-1" style="display:flex;flex-direction:column;align-items:center;">
        <div class="card__icon"><i class="fas fa-bolt"></i></div>
        <h3 class="card__title">Task: @Model.TaskName</h3>
        <h5>Deadline: @Model.DeadlineOfTask</h5>
    </div>
</div>

@{
    var comments = @Model.Comments;
    if(comments != null)
    {
        foreach (var comment in comments)
        {
            <h5>@comment.Comment</h5>
            <h6>@comment.Children</h6>
        }
    }
}

